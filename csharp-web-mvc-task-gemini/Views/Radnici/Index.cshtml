@model IEnumerable<Radnik>;
<h3>Radnici</h3>
@if (@Model.Count() > 0)
{
    
    <a asp-controller="Radnik" asp-action="Dodaj" class="btn btn-dark" id="actionMenuBtn"><i class="fa-solid fa-user-plus mr-2"></i> Novi radnik</a>
    <div class="d-flex justify-content-center align-content-center mt-3" style="text-align: center;">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Ime</th>
                    <th>Prezime</th>
                    <th>Adresa</th>
                    <th>Neto plata</th>
                    <th>Bruto plata</th>
                    <th>Akcija</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var m in Model)
                {
                    <tr>
                        <td>@m.Id</td>
                        <td>@m.Ime</td>
                        <td>@m.Prezime</td>
                        <td>@m.Adresa</td>
                        <td>@m.NetoPlata</td>
                        <td>@m.BrutoPlata</td>
                        <td>
                                <a asp-controller="Radnik" asp-action="Izmeni" asp-route-Id="@m.Id" title="Izmeni" class="btn btn-dark mr-1" id="tableBtn"><i class="fa-solid fa-pencil"></i></a>
                                <a onclick="return confirm('Želite da obrišete radnika?')" asp-controller="Radnik" asp-action="Obrisi" asp-route-Id="@m.Id" title="Obrisi" class="btn btn-dark mr-1" id="tableBtn"><i class='fa-solid fa-trash-can'></i></a>
                                <a asp-controller="Radnik" asp-action="Id" asp-route-Id="@m.Id" title="Prikazi" class="btn btn-dark" id="tableBtn"><i class="fa-solid fa-eye"></i></a>
                        </td>
                    </tr>
                }




            </tbody>
        </table>
    </div>
}
else
{
    <div class="row" id="emptyTableAlert">
        <div class="col-12">
            <h4 class="m-2">Nema radnika za prikaz</h4>
        </div>
        <div class="col-12">
            <a asp-controller="Radnik" asp-action="Dodaj" class="btn btn-dark" id="emptyTableBtn"><i class="fa-solid fa-user-plus mr-2"></i>Dodaj novog radnika</a>
        </div>
    </div>
}
